---
import Header from "./components/Header.astro";
import Sidebar from "./components/Sidebar.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-neutral-900">
    <div class="min-h-screen w-full" x-data="layout">
      <Header />

      <div class="flex min-h-screen pt-14">
        <Sidebar />
        <main class="w-full bg-neutral-700 text-neutral-100 p-4">
          <slot />
        </main>
      </div>
    </div>
  </body>
</html>

<style>
  body {
    scrollbar-width: thin;
    scrollbar-color: rgb(12, 64, 110) rgb(20, 31, 37);
  }
  body::-webkit-scrollbar-track {
    background: rgb(20, 31, 37); /* fallback for old browsers */
    background: -webkit-linear-gradient(
      to right,
      rgb(20, 31, 37),
      rgb(30, 41, 47)
    ); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(
      to right,
      rgb(20, 31, 37),
      rgb(30, 41, 47)
    ); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    border-radius: 10px;
  }
  body::-webkit-scrollbar {
    width: 10px;
  }
  body::-webkit-scrollbar-thumb {
    background: rgb(12, 64, 110); /* fallback for old browsers */
    background: -webkit-linear-gradient(
      to right,
      rgb(12, 64, 110),
      rgb(12, 54, 90)
    ); /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(
      to right,
      rgb(12, 64, 110),
      rgb(12, 64, 110)
    ); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    border-radius: 10px;
  }
</style>
